

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>所属课程</th>
                        <th>章节标题</th>
                        <th>排序</th>
                        <th>创建时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (chapters.length === 0) { %>
                        <tr>
                            <td colspan="6" class="text-center">暂无章节数据</td>
                        </tr>
                    <% } else { %>
                        <% chapters.forEach(chapter => { %>
                            <tr>
                                <td><%= chapter.id %></td>
                                <td><%= chapter.course_name %></td>
                                <td><%= chapter.title %></td>
                                <td><%= chapter.sort %></td>
                                <td><%= new Date(chapter.create_time).toLocaleString() %></td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/admin/chapters/<%= chapter.id %>/edit" class="btn btn-outline-primary">编辑</a>
                                        <a href="/admin/chapters/<%= chapter.id %>/delete" class="btn btn-outline-danger" onclick="return confirm('确定要删除该章节吗？')">删除</a>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
