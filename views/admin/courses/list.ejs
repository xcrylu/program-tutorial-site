

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>课程名称</th>
                        <th>别名</th>
                        <th>简介</th>
                        <th>创建时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (courses.length === 0) { %>
                        <tr>
                            <td colspan="6" class="text-center">暂无课程数据</td>
                        </tr>
                    <% } else { %>
                        <% courses.forEach(course => { %>
                            <tr>
                                <td><%= course.id %></td>
                                <td><%= course.name %></td>
                                <td><%= course.alias %></td>
                                <td><%= course.description.substring(0, 50) %><%= course.description.length > 50 ? '...' : '' %></td>
                                <td><%= new Date(course.create_time).toLocaleString() %></td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/admin/courses/<%= course.id %>/edit" class="btn btn-outline-primary">编辑</a>
                                        <a href="/admin/chapters/create?course_id=<%= course.id %>" class="btn btn-outline-success">添加章节</a>
                                        <a href="/admin/courses/<%= course.id %>/delete" class="btn btn-outline-danger" onclick="return confirm('确定要删除该课程吗？相关章节也会被删除！')">删除</a>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
