

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>用户名</th>
                        <th>邮箱</th>
                        <th>角色</th>
                        <th>状态</th>
                        <th>注册时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (users.length === 0) { %>
                        <tr>
                            <td colspan="7" class="text-center">暂无用户数据</td>
                        </tr>
                    <% } else { %>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.id %></td>
                                <td><%= user.username %></td>
                                <td><%= user.email %></td>
                                <td>
                                    <% if (user.role_name === 'admin') { %>
                                        <span class="badge bg-danger">管理员</span>
                                    <% } else if (user.role_name === 'user') { %>
                                        <span class="badge bg-primary">普通用户</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary">游客</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (user.status === 1) { %>
                                        <span class="badge bg-success">正常</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary">禁用</span>
                                    <% } %>
                                </td>
                                <td><%= new Date(user.created_at).toLocaleString() %></td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/admin/users/<%= user.id %>/edit" class="btn btn-outline-primary">编辑</a>
                                        <a href="/admin/users/<%= user.id %>/delete" class="btn btn-outline-danger" onclick="return confirm('确定要删除该用户吗？')">删除</a>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
