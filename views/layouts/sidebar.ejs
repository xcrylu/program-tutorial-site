
<div class="container-fluid mt-4">
    <div class="row">
        <!-- 侧边栏 -->
        <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link <%= req.path === '/admin' ? 'active' : '' %>" href="/admin">
                            <i class="bi bi-speedometer2 me-2"></i>
                            仪表盘
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= req.path.startsWith('/admin/users') ? 'active' : '' %>" href="/admin/users">
                            <i class="bi bi-people me-2"></i>
                            用户管理
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= req.path.startsWith('/admin/courses') ? 'active' : '' %>" href="/admin/courses">
                            <i class="bi bi-book me-2"></i>
                            课程管理
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= req.path.startsWith('/admin/chapters') ? 'active' : '' %>" href="/admin/chapters">
                            <i class="bi bi-list-nested me-2"></i>
                            章节管理
                        </a>
                    </li>
                    <li class="nav-item mt-5">
                        <a class="nav-link text-danger" href="/logout">
                            <i class="bi bi-box-arrow-right me-2"></i>
                            退出登录
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- 主内容区 -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <!-- 顶部导航 -->
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2"><%= title %></h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <% if (req.path.startsWith('/admin/users')) { %>
                            <a href="/admin/users/create" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-plus-lg me-1"></i> 添加用户
                            </a>
                        <% } else if (req.path.startsWith('/admin/courses')) { %>
                            <a href="/admin/courses/create" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-plus-lg me-1"></i> 添加课程
                            </a>
                        <% } else if (req.path.startsWith('/admin/chapters')) { %>
                            <a href="/admin/chapters/create" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-plus-lg me-1"></i> 添加章节
                            </a>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- 消息提示 -->
            <% if (req.query.success) { %>
                <div class="alert alert-success">
                    <%= req.query.success %>
                </div>
            <% } %>
            
            <% if (req.query.error) { %>
                <div class="alert alert-danger">
                    <%= req.query.error %>
                </div>
            <% } %>

            <!-- 页面内容 -->
            <%- body %>
        </main>
    </div>
</div>

<!-- 引入 Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
